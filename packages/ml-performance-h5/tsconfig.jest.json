{
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "noUnusedLocals": false, //是否检查未使用的局部变量
    "noUnusedParameters": false, //是否检查未使用的参数
    "types": [
      "jest"
    ],
    "declarationDir": "./types", /* '.d.ts' 文件输出目录 */
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "__tests__",
  ]
}